source 'http://rubygems.org'

gem 'rails', '3.1.1'
gem 'haml-rails'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'compass-rails'
end

group :development do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
  gem 'rack-rewrite'
  gem 'thin'
  gem 'newrelic_rpm'
end
